<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_new_unit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.dortmund.fh.jung.myproject.create.unit.CreateNewUnitActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/unit_name_hint"
        android:inputType="textCapSentences"
        android:gravity="center"
        android:id="@+id/unit_name_inputfield"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:layout_width="176dp"
        android:layout_height="176dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:id="@+id/create_new_unit_imageView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/unit_name_inputfield"
        android:layout_marginStart="24dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="144dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="144dp" />
    <TextView
        android:text="@string/mastery_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_masteryLevelLabel"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_lesserGiftLabel"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_lesserGiftLabel"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView_lesserGiftLabel"
        app:layout_constraintHorizontal_bias="0.5" />
    <TextView
        android:text="@string/greater_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_greater_gift_label"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/create_new_unit_imageView"
        app:layout_constraintHorizontal_bias="0.579" />
    <TextView
        android:text="@string/middle_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_middle_gift_label"
        app:layout_constraintLeft_toLeftOf="@+id/textView_greater_gift_label"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_greater_gift_label"
        app:layout_constraintRight_toRightOf="@+id/textView_greater_gift_label" />

    <TextView
        android:text="@string/lesser_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_lesserGiftLabel"
        app:layout_constraintRight_toRightOf="@+id/textView_middle_gift_label"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_middle_gift_label"
        app:layout_constraintLeft_toLeftOf="@+id/textView_middle_gift_label"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/nurgle"
        android:id="@+id/imageView_nurgle"
        android:scaleType="fitCenter"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView_slaanesh"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/tzeentch"
        android:id="@+id/imageView_tzzench"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/imageView_khorne"
        app:layout_constraintLeft_toRightOf="@+id/imageView_nurgle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/create_new_unit_imageView"
        android:layout_marginEnd="46dp" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/slaanesh"
        android:id="@+id/imageView_slaanesh"
        android:scaleType="fitCenter"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/unit_name_inputfield" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/khorne"
        android:id="@+id/imageView_khorne"
        android:scaleType="fitCenter"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView_slaanesh"
        app:layout_constraintTop_toTopOf="@+id/imageView_slaanesh"
        app:layout_constraintRight_toLeftOf="@+id/create_new_unit_imageView"
        android:layout_marginEnd="46dp" />

    <include
        android:id="@+id/mastery_level_numbers"
        android:layout_width="wrap_content"
        layout="@layout/unit_master_level_numbers_layout"
        android:layout_height="34dp"
        app:layout_constraintLeft_toLeftOf="@+id/create_new_unit_imageView"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lesser_gifts_numbers"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.15" />

    <include
        android:id="@+id/greater_gifts_numbers"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        layout="@layout/unit_gifts_numbers_layout"
        app:layout_constraintLeft_toLeftOf="@+id/create_new_unit_imageView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/create_new_unit_imageView"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.064" />

    <include
        android:id="@+id/middle_gifts_numbers"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        layout="@layout/unit_gifts_numbers_layout"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/greater_gifts_numbers"
        app:layout_constraintLeft_toLeftOf="@+id/greater_gifts_numbers"
        app:layout_constraintRight_toRightOf="@+id/greater_gifts_numbers" />

    <include
        android:id="@+id/lesser_gifts_numbers"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        layout="@layout/unit_gifts_numbers_layout"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/middle_gifts_numbers"
        app:layout_constraintLeft_toLeftOf="@+id/middle_gifts_numbers"
        app:layout_constraintRight_toRightOf="@+id/middle_gifts_numbers" />

    <Button
        android:text="@string/create_new_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_save_new_unit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mastery_level_numbers"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
